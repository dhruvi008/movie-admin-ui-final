<%- include('partials/header') %>

<!DOCTYPE html>
<html>
<head>
    <title>Add Movie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body class="bg-white">
    <div class="container py-5">
        <h2 class="mb-4">Add a New Movie</h2>
        <form action="/addmovie" method="POST" enctype="multipart/form-data" class="row g-3">
            <div class="col-md-6"><input class="form-control" name="moviename" placeholder="Movie Name" required /></div>
            <div class="col-md-3"><input class="form-control" type="number" name="ratings" placeholder="Rating" required /></div>
            <div class="col-md-3"><input class="form-control" name="age_restriction" placeholder="Age Restriction" /></div>
            <div class="col-md-6"><input class="form-control" name="dimensions" placeholder="Dimensions (comma separated)" /></div>
            <div class="col-md-6"><input class="form-control" name="language" placeholder="Languages (comma separated)" /></div>
            <div class="col-md-6"><input class="form-control" name="geners" placeholder="Genres (comma separated)" /></div>
            <div class="col-md-6"><input class="form-control" name="relising_date" type="date" /></div>
            <div class="col-md-3"><input class="form-control" type="number" name="hour" placeholder="Hours" /></div>
            <div class="col-md-3"><input class="form-control" type="number" name="min" placeholder="Minutes" /></div>
            <div class="col-12"><textarea class="form-control" name="desc" placeholder="Description"></textarea></div>
            <div class="col-md-6"><label>Poster Image</label><input class="form-control" type="file" name="poster_img" /></div>
            <div class="col-md-6"><label>Background Image</label><input class="form-control" type="file" name="background_img" /></div>
            <div class="col-12"><button class="btn btn-dark w-100" type="submit">Add Movie</button></div>
        </form>
    </div>
</body>
</html>
